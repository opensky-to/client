      xmlns:ui="http://schemas.modernwpf.com/2019"
      xmlns:tools="clr-namespace:OpenSky.Client.Tools"
      xmlns:dgx="urn:tom-englert.de/DataGridExtensions"
      LoadingText="{Binding LoadingText}" Loaded="AircraftTypesOnLoaded"
      HorizontalScrollBar="False" VerticalScrollBar="False"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="2000">
    <UserControl.DataContext>
        <models:AircraftTypesViewModel x:Name="ViewModel" />
    </UserControl.DataContext>
    <UserControl.Resources>
        <converters:AircraftTypeEngineInfoConverter x:Key="AircraftTypeEngineInfoConverter" />
        <converters:NullItemToVisibilityConverter x:Key="NullItemToVisibilityConverter" />
        <ObjectDataProvider x:Key="CategoryDataProvider" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="openSkyApi:AircraftTypeCategory" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="SimulationDataProvider" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="openSkyApi:Simulator" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <ObjectDataProvider x:Key="FuelTypeDataProvider" MethodName="GetValues" ObjectType="{x:Type system:Enum}">
            <ObjectDataProvider.MethodParameters>
                <x:Type TypeName="openSkyApi:FuelType" />
            </ObjectDataProvider.MethodParameters>
        </ObjectDataProvider>
        <DrawingBrush x:Key="GreyDottedBrush" Viewport="0,0,3,3" ViewportUnits="Absolute" TileMode="Tile">
            <DrawingBrush.Drawing>
                <DrawingGroup>
                    <GeometryDrawing Brush="Gray">
                        <GeometryDrawing.Geometry>
                            <GeometryGroup>
                                <RectangleGeometry Rect="0,0,50,50" />
                                <RectangleGeometry Rect="50,50,50,50" />
                            </GeometryGroup>
                        </GeometryDrawing.Geometry>
                    </GeometryDrawing>
                </DrawingGroup>
            </DrawingBrush.Drawing>
        </DrawingBrush>
        <CollectionViewSource Source="{Binding ExistingAircraftTypes}" x:Key="ExistingAircraftTypesViewSource">
            <CollectionViewSource.SortDescriptions>
                <componentModel:SortDescription PropertyName="Name" Direction="Ascending" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>
    <UserControl.InputBindings>
        <KeyBinding Key="F5" Command="{Binding RefreshAircraftTypesCommand}" />
    </UserControl.InputBindings>
    <Grid Margin="5,5,5,10">
        <Grid.Resources>
            <!-- ReSharper disable once Xaml.BindingWithContextNotResolved -->
            <converters:AircraftTypeForeignKeyConverter x:Key="AircraftTypeForeignKeyConverter" AircraftTypes="{Binding DataContext.ExistingAircraftTypes, Source={x:Reference ProxyElement}}" />
        </Grid.Resources>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition Width="1*" />
            <ColumnDefinition Width="Auto" />
