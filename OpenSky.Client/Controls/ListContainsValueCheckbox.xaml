<UserControl x:Class="OpenSky.Client.Controls.ListContainsValueCheckbox"
                 xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
                 xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
                 xmlns:controls="clr-namespace:OpenSky.Client.Controls"
                 mc:Ignorable="d" 
                 d:DesignHeight="20" d:DesignWidth="20">
    <CheckBox MinWidth="0" IsChecked="{Binding RelativeSource={RelativeSource AncestorType={x:Type controls:ListContainsValueCheckbox}}, Path=Contains, Mode=TwoWay}" />
</UserControl>
